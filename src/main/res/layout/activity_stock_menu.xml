<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_2.0">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:src="@drawable/ic_goback_blue" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center_horizontal"
            android:text="STOCK"
            android:textSize="24sp"
            android:textColor="#232946" />

        <!-- Add Button -->
        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Add Icon"
            android:src="@drawable/baseline_add"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Main Tab Layout (Stock/Waste) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Stock Tab -->
        <TextView
            android:id="@+id/tabStock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#025CF8"
            android:gravity="center"
            android:text="STOCK"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold" />

        <!-- Waste Tab -->
        <TextView
            android:id="@+id/tabWaste"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="WASTE"
            android:textColor="#404040"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold" />
    </LinearLayout>

    <!-- List Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:background="#F5F7FA">

            <!-- Item Name -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item Name"
                android:textSize="14sp"
                android:textColor="#232946"
                android:fontFamily="@font/inter_bold" />

            <!-- Quantity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:text="Quantity"
                android:textSize="14sp"
                android:textColor="#232946"
                android:gravity="end"
                android:fontFamily="@font/inter_bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- List Items (RecyclerView) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerInventory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
