<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingsContent.HelpCenter">

  <!-- Header -->
  <RelativeLayout
      android:id="@+id/header"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_alignParentTop="true"
      android:background="@drawable/ic_bluetop"
      android:paddingTop="15dp"
      android:paddingBottom="10dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="goBack"
        app:srcCompat="@drawable/ic_goback" />

    <!-- Title -->
    <TextView
        android:id="@+id/nav_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/atyp_medium"
        android:text="Help Center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp" />
  </RelativeLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/light_2.0"
      android:layout_below="@id/header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

      <!-- Help Center Introduction -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:orientation="vertical">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/atyp_medium"
            android:text="Seller Help Center"
            android:textColor="@color/text"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="3dp">

          <ImageView
              android:id="@+id/imageView7"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:srcCompat="@drawable/ic_update" />

          <TextView
              android:id="@+id/textView25"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:fontFamily="@font/atyp_medium"
              android:paddingStart="3dp"
              android:paddingTop="4dp"
              android:paddingBottom="4dp"
              android:text="Last Update: 11 January 2025"
              android:textColor="@color/grey"
              android:textSize="14sp" />
        </LinearLayout>
      </LinearLayout>

      <!-- Welcome Section -->
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="2dp"
          app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/atyp_medium"
              android:text="Welcome to TapNBite Help Center!"
              android:textColor="@color/text"
              android:textSize="15sp" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/atyp_regular"
              android:lineSpacingExtra="3dp"
              android:paddingTop="5dp"
              android:text="@string/seller_help_welcome"
              android:textColor="@color/text"
              android:justificationMode="inter_word"
              android:textSize="15sp" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Getting Started Section -->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/atyp_medium"
          android:text="Getting Started"
          android:textColor="@color/text"
          android:textSize="23sp" />

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="2dp"
          app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <!-- Expandable Question 1 -->
          <LinearLayout
              android:id="@+id/header_listing_products"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/atyp_medium"
                android:text="How do I list my products?"
                android:textColor="@color/text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/arrow_listing_products"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down" />
          </LinearLayout>

          <!-- Expandable Content 1 -->
          <LinearLayout
              android:id="@+id/content_listing_products"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone"
              android:padding="16dp"
              android:paddingTop="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atyp_regular"
                android:lineSpacingExtra="3dp"
                android:justificationMode="inter_word"
                android:text="@string/seller_account_setup"
                android:textColor="@color/text"
                android:textSize="15sp" />
          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/grey" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Managing Orders and Inventory Section -->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/atyp_medium"
          android:text="Managing Orders and Inventory"
          android:textColor="@color/text"
          android:textSize="23sp" />

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="2dp"
          app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <!-- Expandable Question 2 -->
          <LinearLayout
              android:id="@+id/header_manage_orders"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/atyp_medium"
                android:text="How do I manage incoming orders?"
                android:textColor="@color/text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/arrow_manage_orders"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down" />
          </LinearLayout>

          <!-- Expandable Content 2 -->
          <LinearLayout
              android:id="@+id/content_manage_orders"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone"
              android:padding="16dp"
              android:paddingTop="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atyp_regular"
                android:lineSpacingExtra="3dp"
                android:justificationMode="inter_word"
                android:text="@string/seller_order_management"
                android:textColor="@color/text"
                android:textSize="15sp" />
          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/grey" />

          <!-- Expandable Question 3 -->
          <LinearLayout
              android:id="@+id/header_update_menu"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/atyp_medium"
                android:text="Can I update my menu or inventory?"
                android:textColor="@color/text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/arrow_update_menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down" />
          </LinearLayout>

          <!-- Expandable Content 3 -->
          <LinearLayout
              android:id="@+id/content_update_menu"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone"
              android:padding="16dp"
              android:paddingTop="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atyp_regular"
                android:lineSpacingExtra="3dp"
                android:justificationMode="inter_word"
                android:text="@string/seller_menu_updates"
                android:textColor="@color/text"
                android:textSize="15sp" />
          </LinearLayout>
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Payments and Financial Management Section -->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/atyp_medium"
          android:text="Payments and Financial Management"
          android:textColor="@color/text"
          android:textSize="23sp" />

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="2dp"
          app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <!-- Expandable Question 4 -->
          <LinearLayout
              android:id="@+id/header_receive_payments"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/atyp_medium"
                android:text="How do I receive payments?"
                android:textColor="@color/text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/arrow_receive_payments"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down" />
          </LinearLayout>

          <!-- Expandable Content 4 -->
          <LinearLayout
              android:id="@+id/content_receive_payments"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone"
              android:padding="16dp"
              android:paddingTop="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atyp_regular"
                android:lineSpacingExtra="3dp"
                android:justificationMode="inter_word"
                android:text="@string/seller_payments"
                android:textColor="@color/text"
                android:textSize="15sp" />
          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/grey" />

          <!-- Expandable Question 5 -->
          <LinearLayout
              android:id="@+id/header_sales_performance"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/atyp_medium"
                android:text="Can I view my sales performance?"
                android:textColor="@color/text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/arrow_sales_performance"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down" />
          </LinearLayout>

          <!-- Expandable Content 5 -->
          <LinearLayout
              android:id="@+id/content_sales_performance"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone"
              android:padding="16dp"
              android:paddingTop="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atyp_regular"
                android:lineSpacingExtra="3dp"
                android:justificationMode="inter_word"
                android:text="@string/seller_sales_analytics"
                android:textColor="@color/text"
                android:textSize="15sp" />
          </LinearLayout>
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Troubleshooting and Support Section -->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/atyp_medium"
          android:text="Troubleshooting and Support"
          android:textColor="@color/text"
          android:textSize="23sp" />

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="2dp"
          app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <!-- Expandable Question 6 -->
          <LinearLayout
              android:id="@+id/header_technical_issues"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/atyp_medium"
                android:text="What should I do if I encounter technical issues?"
                android:textColor="@color/text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/arrow_technical_issues"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down" />
          </LinearLayout>

          <!-- Expandable Content 6 -->
          <LinearLayout
              android:id="@+id/content_technical_issues"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone"
              android:padding="16dp"
              android:paddingTop="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atyp_regular"
                android:lineSpacingExtra="3dp"
                android:justificationMode="inter_word"
                android:text="@string/seller_technical_support"
                android:textColor="@color/text"
                android:textSize="15sp" />
          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/grey" />

          <!-- Expandable Question 7 -->
          <LinearLayout
              android:id="@+id/header_report_fraud"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/atyp_medium"
                android:text="How do I report fraudulent activity?"
                android:textColor="@color/text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/arrow_report_fraud"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down" />
          </LinearLayout>

          <!-- Expandable Content 7 -->
          <LinearLayout
              android:id="@+id/content_report_fraud"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone"
              android:padding="16dp"
              android:paddingTop="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atyp_regular"
                android:lineSpacingExtra="3dp"
                android:justificationMode="inter_word"
                android:text="@string/seller_fraud_prevention"
                android:textColor="@color/text"
                android:textSize="15sp" />
          </LinearLayout>
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Policies and Guidelines Section -->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/atyp_medium"
          android:text="Policies and Guidelines"
          android:textColor="@color/text"
          android:textSize="23sp" />

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="2dp"
          app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <!-- Expandable Question 8 -->
          <LinearLayout
              android:id="@+id/header_selling_policies"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/atyp_medium"
                android:text="What are the selling policies on TapNBite?"
                android:textColor="@color/text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/arrow_selling_policies"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down" />
          </LinearLayout>

          <!-- Expandable Content 8 -->
          <LinearLayout
              android:id="@+id/content_selling_policies"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone"
              android:padding="16dp"
              android:paddingTop="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atyp_regular"
                android:lineSpacingExtra="3dp"
                android:justificationMode="inter_word"
                android:text="@string/seller_responsibilities"
                android:textColor="@color/text"
                android:textSize="15sp" />
          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/grey" />

          <!-- Expandable Question 9 -->
          <LinearLayout
              android:id="@+id/header_outside_payments"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/atyp_medium"
                android:text="Can I accept payments outside the app?"
                android:textColor="@color/text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/arrow_outside_payments"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down" />
          </LinearLayout>

          <!-- Expandable Content 9 -->
          <LinearLayout
              android:id="@+id/content_outside_payments"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone"
              android:padding="16dp"
              android:paddingTop="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atyp_regular"
                android:lineSpacingExtra="3dp"
                android:justificationMode="inter_word"
                android:text="@string/seller_transaction_policy"
                android:textColor="@color/text"
                android:textSize="15sp" />
          </LinearLayout>
        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <!-- Direct Support Options Section -->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/atyp_medium"
          android:text="Direct Support Options"
          android:textColor="@color/text"
          android:textSize="23sp" />

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="30dp"
          app:cardCornerRadius="8dp"
          app:cardElevation="2dp"
          app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/atyp_medium"
              android:text="Need further assistance? Here's how to get in touch:"
              android:textColor="@color/text"
              android:textSize="15sp" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/atyp_regular"
              android:lineSpacingExtra="3dp"
              android:paddingTop="5dp"
              android:text="@string/seller_email_support"
              android:textColor="@color/text"
              android:justificationMode="inter_word"
              android:textSize="15sp" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>
    </LinearLayout>
  </ScrollView>
</RelativeLayout>